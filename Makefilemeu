SRCS	= ft_printf.c \
		ft_printf_char.c \
		ft_printf_hex.c \
		ft_printf_num.c
OBJS = ${SRCS:.c=.o}
NAME = libftprintf.a
LIBFT = libft/libft.a
CC = gcc
RM = rm -f
CFLAGS = -Wall -Wextra -Werror
LIBC = ar rcs

.c.o:
		${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

${NAME}: 	libft.a ${OBJS}
			cp ${LIBFT} .
			mv libft.a $(NAME)
			${LIBC} ${NAME} ${OBJS}

all:	${NAME}

libft.a:
		${MAKE} all -C ./libft

clean: 
		${MAKE} clean -C ./libft
		${RM} ${OBJS}


fclean: 
		${MAKE} fclean -C ./libft 
		${MAKE} clean
		${RM} ${NAME}

re: fclean all